<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        
        android:layout_height="match_parent"
        android:id="@+id/testRL">

        <RelativeLayout
            android:id="@+id/userMain"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="#FFCC22" >
            <TextView 
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/ivUserPic"
                
                />

            <ImageView
                android:id="@+id/ivUserPic"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                 />

            <TextView
                android:id="@+id/tvUserLoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvUserName"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="17dp"
                android:text="TextView" />
                
        </RelativeLayout>
        <RelativeLayout 
            android:id="@+id/userSub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/userMain"
             >

            <TextView
                android:id="@+id/tvABoutMe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"
                android:text=""
                android:textColor="#999999"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/tvDOB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tvABoutMe"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="26dp"
                android:text="DOB:"
                android:textColor="#999999"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/tvDOBVal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tvDOB"
                android:layout_alignBottom="@+id/tvDOB"
                android:layout_toRightOf="@+id/tvDOB"
                android:layout_marginLeft="85dp" 
                android:text=""
                android:textColor="#999999"
                android:textStyle="bold"
                
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/tvHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tvDOB"
                android:layout_below="@+id/tvDOB"
                android:layout_marginTop="16dp"
                android:text="Height:"
                android:textColor="#999999"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/tvHeightVal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tvHeight"
                android:layout_alignBottom="@+id/tvHeight"
                android:layout_alignRight="@+id/tvDOBVal"
                android:text=""
                android:textColor="#999999"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/tvWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/tvHeight"
                android:layout_below="@+id/tvHeight"
                android:layout_marginTop="16dp"
                android:text="Weight:"
                android:textColor="#999999"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/tvWeightVal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tvWeight"
                android:layout_alignLeft="@+id/tvHeightVal"
                android:text=""
                android:textColor="#999999"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/tvMemberSince"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tvWeight"
                android:layout_below="@+id/tvWeight"
                android:layout_marginTop="16dp"
                android:text="Member Since:"
                android:textColor="#999999"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/tvMemberSinceVal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tvMemberSince"
                android:layout_alignRight="@+id/tvWeightVal"
                android:text=""
                android:textColor="#999999"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Button
                android:id="@+id/btnContinue"
                android:layout_width="146dp"
                android:layout_height="56dp"
                android:layout_below="@+id/tvMemberSince"
                android:layout_centerHorizontal="true"
                android:background="@drawable/buttonshape"
                android:onClick="onContinue"
                android:text="Continue"
                android:textColor="#ffffff"
                android:textStyle="bold" />
            
            ></RelativeLayout>
</RelativeLayout>